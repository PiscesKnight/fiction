<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/mycollect_ry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/mycollect_cover_iv"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/abv123456"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/mycollect_ry"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/mycollect_ry"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/mycollect_title_text"
            style="@style/BookNameFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignTop="@+id/mycollect_ry"
            android:text="题目"

            android:textSize="15sp" />

        <TextView
            android:id="@+id/mycollect_write_text"
            style="@style/ContentFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="作者"
            android:layout_weight="0.4"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/mycollect_bookcount_text"
            style="@style/ContentFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读过人数"
            android:layout_weight="0.4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mycollect_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="一天前"
            android:textSize="12sp" />
    </LinearLayout>



</RelativeLayout>